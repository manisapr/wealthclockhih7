<script type="text/javascript">

    $('.sipcancel').change(function () {
        debugger;
        if ($(this).find(':selected').attr('data-type') == 'C') {

            //$('.ui-loader').removeClass('hide');
            var schemecode = $(this).val();
            var RegNo = $(this).find(':selected').attr('data-no');
            $.confirm({
                title: 'Confirm!',
                content: 'Do you want to cancel this?',
                buttons: {
                    confirm: function () {
                        $('.ui-loader').removeClass('hide');
                        debugger;
                        $.post("/DashBoard/CancelSip", { Schemecode: schemecode, RegNo: RegNo }, function (data) {
                            $('.ui-loader').addClass('hide');
                            if (data != "") {
                                debugger;
                                jResult = data.split('|');
                                if (jResult[0] == "Success") {
                                    $.confirm({
                                        title: 'Confirm!',
                                        content: jResult[1],
                                        buttons: {
                                            Ok: function () {
                                                location.reload();
                                            },
                                        }
                                    });

                                }
                                else {
                                    debugger;
                                    $.confirm({
                                        title: 'Message!',
                                        content: jResult[1],
                                        buttons: {
                                            Ok: function () {
                                                location.reload();
                                            },
                                        }
                                    });
                                }
                            }
                        })

                    },
                    cancel: function () {
                        location.reload();
                    },
                }
            });

        }
    })
