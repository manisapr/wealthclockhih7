    $('#btnSTP').click(function () {

        $('#SIP').addClass('hide');
        $('#STP').removeClass('hide');
    });
    $('#btnSIP').click(function () {

        $('#STP').addClass('hide');
        $('#SIP').removeClass('hide');
    });
</script>

