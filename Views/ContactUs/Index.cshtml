<script type="text/javascript">
    function validateEmail(sEmail) {
        var filter = RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);
        if (filter.test(sEmail)) {
            return true;
        }
        else {
            return false;
        }
    }

    function ValidateMobile(Mobile) {
        var filter = RegExp(/^(?:(?:\+|0{0,2})91(\s*[\-]\s*)?|[0]?)?[789]\d{9}$/);
        if (filter.test(Mobile)) {
            return true;
        }
        else {
            return false;
        }
    }

    function ValidateFullName(fullname) {
        var filter = RegExp(/^[A-Za-z\s]+$/);
        if (filter.test(fullname)) {
            return true;
        }
        else {
            return false;
        }
    }


    function validation() {
        var isValid = true;

        if ($('#txt_Name').val() == "") {
            $('#txt_Name').addClass('errorTextBox');
            $('#txt_Name').focus();
            $('#span_Name').removeClass('hide');
            isValid = false;
        }
        else if (!ValidateFullName($.trim($("#txt_Name").val()))) {
            $('#txt_Name').addClass('errorTextBox');
            $('#txt_Name').focus();
            $('#span_NameVal').removeClass('hide');
            isValid = false;
        }
        else if ($('#txt_Email').val() == "") {
            $('#txt_Email').addClass('errorTextBox');
            $('#txt_Email').focus();
            $('#span_email').removeClass('hide');
            isValid = false;
        }
        else if (!validateEmail($.trim($("#txt_Email").val()).toLowerCase())) {
            $('#txt_Email').addClass('errorTextBox');
            $('#txt_Email').focus();
            $('#span_emailVal').removeClass('hide');
            isValid = false;
        }
        else if ($('#txt_Mobile').val() == "") {
            $('#txt_Mobile').addClass('errorTextBox');
            $('#txt_Mobile').focus();
            $('#span_MobNo').removeClass('hide');
            isValid = false;
        }
        else if (!ValidateMobile($.trim($("#txt_Mobile").val()))) {
            $('#txt_Mobile').addClass('errorTextBox');
            $('#txt_Mobile').focus();
            $('#span_MobNoVal').removeClass('hide');
            isValid = false;
        }
        else if ($('#txtcomments').val() == "") {
            $('#txtcomments').addClass('errorTextBox');
            $('#txtcomments').focus();
            $('#span_comments').removeClass('hide');
            isValid = false;
        }
        else if ($('#CaptchaInputText').val() == "") {
            $('#CaptchaInputText').addClass('errorTextBox');
            $('#CaptchaInputText').focus();
            $('#span_captcha').removeClass('hide');
            isValid = false;
        }
        return isValid;
    }

    $("#ContactUsClick").click(function (e) {
        e.preventDefault();
        $('#txt_Name').removeClass('errorTextBox');
        $('#txt_Mobile').removeClass('errorTextBox');
        $('#txt_Email').removeClass('errorTextBox');
        $('#txtcomments').removeClass('errorTextBox');
        $('#span_Name').addClass('hide');
        $('#span_NameVal').addClass('hide');
        $('#span_MobNo').addClass('hide');
        $('#span_MobNoVal').addClass('hide');
        $('#span_email').addClass('hide');
        $('#span_emailVal').addClass('hide');
        $('#span_comments').addClass('hide');
        $('#span_captcha').addClass('hide');

        if (validation()) {
            $('.ui-loader').removeClass('hide');
            $('#ContactUsClick').prop('disabled', true);
            var Data =
                {
                    Name: $.trim($('#txt_Name').val()),
                    Mobile: $.trim($('#txt_Mobile').val()),
                    Email: $.trim($('#txt_Email').val()),
                    Comments: $.trim($('#txtcomments').val()),
                    Captcha: $.trim($('#CaptchaInputText').val())
                }

            $.post("@Url.Content("~/ContactUs/SubmitContactUs")", { JsonData: JSON.stringify(Data) }, function (data) {
                Jsonresult = data.split('|');
                $('.ui-loader').addClass('hide');
                $('#ContactUsClick').prop('disabled', false);
                $('html, body').animate({ scrollTop: ($(window).scrollTop() + 200) + 'px' }, 300);
                if (Jsonresult[0] == "Success") {
                    $('#div_success').removeClass('hide');
                    $('#txt_success').text(Jsonresult[1]);
                    setTimeout(function () {
                        $('#div_success').addClass('hide');
                        $('#txt_success').text('');
                        location.reload();
                    }, 8000)
                }
                else if (Jsonresult[0] == "Failed") {
                    $('#div_error').removeClass('hide');
                    $('#txt_error').text(Jsonresult[1]);
                    setTimeout(function () {
                        $('#div_error').addClass('hide');
                        $('#txt_error').text('');
                    }, 15000);
                }
            });
        }
    });
</script>





