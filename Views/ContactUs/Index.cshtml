        ['Kolkata Office', 22.51218, 88.328494, 'Plot no. 146, 19/7,<br/> Sahapur Colony, Bankim Mukherjee Sarani, Block J , <br/>Kolkata, West Bengal - 700053']
    ];

    function initMap() {

        var myOptions = {
            zoom: 4.4,
            center: new google.maps.LatLng(21.145800, 79.088155)


        };
        var map = new google.maps.Map(document.getElementById("map"),
            myOptions);

        setMarkers(map, locations)

    }



    function setMarkers(map, locations) {

        var marker, i

        for (i = 0; i < locations.length; i++) {

            var loan = locations[i][0]
            var lat = locations[i][1]
            var long = locations[i][2]
            var add = locations[i][3]

            latlngset = new google.maps.LatLng(lat, long);

            var marker = new google.maps.Marker({
                map: map, title: loan, icon: 'https://wealthclockadvisors.com/images/images_Dashboard/profile-logo.png', position: latlngset
            });
            map.setCenter(marker.getPosition())


            var content = "<div style='color:black;'>Address: " + add + "</div>"

            var infowindow = new google.maps.InfoWindow()

            google.maps.event.addListener(marker, 'click', (function (marker, content, infowindow) {
                return function () {
                    infowindow.setContent(content);
                    infowindow.open(map, marker);
                };
            })(marker, content, infowindow));

        }
    }
</script>
